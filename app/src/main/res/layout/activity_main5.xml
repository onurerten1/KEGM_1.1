<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.onurerten.kegm_11.Main5Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diğer gemiler için GRT giriniz:"
        android:textSize="20sp"
        android:id="@+id/textView4"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="4"
        android:id="@+id/editText4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HESAPLA"
        android:id="@+id/hesap4"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="20sp"
        android:id="@+id/sonuc4"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/hesap4" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/kegmlogo"
        android:id="@+id/imageView4"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/hesap4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ücret:"
        android:textSize="20sp"
        android:layout_alignTop="@+id/sonuc4"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Ücretler dolar cinsindendir."
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BAŞKA BİR HİZMET SEÇ"
        android:layout_below="@+id/sonuc4"
        android:layout_toStartOf="@+id/editText4"
        android:layout_marginTop="48dp"
        android:id="@+id/buttonb4"
        android:onClick="sendBack4"
        />




</RelativeLayout>
